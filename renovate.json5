{
    $schema: "https://docs.renovatebot.com/renovate-schema.json",
    extends: [
        "config:best-practices",
        ":semanticCommits",
        ":semanticCommitTypeAll(chore)",
        "group:recommended",
    ],
    labels: ["dependencies"],
    rangeStrategy: "pin",
    automerge: true,
    nix: {
        enabled: true,
    },
    lockFileMaintenance: { enabled: true },
    vulnerabilityAlerts: { addLabels: ["security"] },
    osvVulnerabilityAlerts: true,
    reviewers: ["TimShilov"],
}
